<!DOCTYPE html>
<html>
<head>
	<title>Depot</title>
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %> 
	<%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= link_to store_url do %>
			<%= image_tag("logo.png") %>
		<% end %>
		<%= @page_title || "Progmatic Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %> 
					<%= render @cart %>
				<% end %>
			<% end %>

			<ul>
				<li><a href="http://localhost:3000">Home</a></li>
				<li><a href="http://www.../faq">Questions</a></li>
				<li><a href="http://www.../news">News</a></li>
				<li><a href="http://www.../contract">Contact</a></li>
			</ul>

			<% if session[:user_id] == nil %>
				<ul>
					<li><%= link_to 'login', login_path %></li>
				</ul>
			<% end %>
			<% if session[:user_type] == 'admin' %>
				<ul>
					<li><%= link_to 'Orders', orders_path(:type => 'admin')%></li>
					<li><%= link_to 'Products', products_path %></li>
					<li><%= link_to 'Users', users_path %></li>
					<li><%= button_to 'Logout', admin_logout_path, method: :delete %></li>
				</ul>
			<% end %>
			<% if session[:user_type] == 'user' %>
				<% user = CustomerUser.find_by_id(session[:user_id]) %>
				<ul>
					<li><%= link_to "#{user.name}",  edit_customer_user_path(session[:user_id])  %></li>
					<li><%= link_to "Orders", orders_path(:type => 'user') %></li>
					<li><%= button_to 'Logout', logout_path, method: :delete %></li>
				</ul>
			<% end %>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
