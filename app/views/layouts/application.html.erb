<!DOCTYPE html>
<html>
<head>
	<title>Depot</title>
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %> 
	<%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="header"> 
		<div id="menu">
			<% if session[:user_id] == nil %>
				<%= link_to 'login', login_path %>
			<% end %>
			<% if session[:user_type] == 'admin' %>
				<% user = User.find_by_id(session[:user_id]) %>
				<%= link_to "#{user.name}",  edit_user_path(session[:user_id])  %>
				<%= link_to 'Logout', admin_logout_path, method: :delete %>|
				<%= link_to 'My Orders', orders_path %>
			<% end %>
			<% if session[:user_type] == 'user' %>
				<% user = CustomerUser.find_by_id(session[:user_id]) %>
				<%= link_to "#{user.name}",  edit_customer_user_path(session[:user_id])  %>
				<%= link_to 'Logout', logout_path, method: :delete %>|
				<%= link_to 'My Orders', orders_path %>
			<% end %>
		</div>
	</div>
	<div id="banner">
		<%= link_to store_url do %>
			<%= image_tag("logo.png") %>
		<% end %>
		<%= @page_title || "Progmatic Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %> 
					<%= render @cart %>
				<% end %>
			<% end %>

			<ul>
				<li><a href="http://localhost:3000">Home</a></li>
				<li><a href="http://www.../faq">Questions</a></li>
				<li><a href="http://www.../news">News</a></li>
				<li><a href="http://www.../contract">Contact</a></li>
			</ul>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
