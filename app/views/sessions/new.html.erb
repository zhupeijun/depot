<div class="depot_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

		<fieldset>
		<legend><%= t('.legend') %></legend>
			<table>
				<tr>
					<td>
						<%= form_tag do %>
							<table>
								<tr>
									<td>
										<%= label_tag :name, t('.name')+':' %>
									</td>
									<td>
										<%= text_field_tag :name, params[:name],  :class => "input_field" %>
									</td>
								</tr>
								<tr>
									<td>
										<%= label_tag :password, t('.password') + ':' %>
									</td>
									<td>
										<%= password_field_tag :password, params[:password], :class => "input_field" %>
									</td>
								</tr>
								<tr>
									<td>
										<%= submit_tag t('.login') %>
									</td>
									<td>
										<%= link_to t('.register'), new_customer_user_path %>
									</td>
								</tr>
							</table>
						<% end %>
					</td>
				</tr>
			</table>
			


	</fieldset>
</div>
