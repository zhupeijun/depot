<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<table>
	<tr>
		<td>
			<div class="product_img">
				<%= image_tag(@product.image_url) %>
			</div>
		</td>
		<td>
			<div>
  			<strong>Title:</strong>
				<%= @product.title %>
			</div>
			<div>
				<strong>Price:</strong>
				<%= @product.price %>
			</div>
			<div>
				<%= button_to 'Add To Cart', 
						line_items_path(product_id: @product),
						remote: true %>
			</div>
		</td>
	</tr>
</table>

<p>
  <strong>Description:</strong>
  <%= @product.description.html_safe %>
</p>

<% if session[:user_type] == 'admin' %>
	<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>

<% if Comment.find_by_user_id(session[:user_id]) == nil %>
<div>
	<%= form_tag comments_path do %>
		<%= hidden_field_tag :product_id, @product.id %>
		<%= hidden_field_tag :user_id, session[:user_id] %>
		<%= label_tag 'Comment:' %><br>
		<%= text_area_tag :comment %><br>
		<%= submit_tag 'Submit' %>
	<% end %>
</div>
<% end %>

<div class="comments_area">
<table>
	<% Comment.where("product_id = #{@product.id}").each do |c| %>
		<tr>
			<td>
				<strong><%= CustomerUser.find(3).name %></strong>,
			</td>
			<td>
				<%= c.comment %>
			</td>
		</tr>
	<% end %>
</table>
</div>



